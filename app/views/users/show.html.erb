<%= render 'devise/shared/navbar' %>


<div class="container main-user well">
<h1>Show User </h1>
<div class="row">
  <div class="col-md-12">

    <div class="form-group">
      <label class="control-label">Username</label> <br>
      <input class="form-control" size="30" type="text" value="<%= @user.username%>" disabled>
    </div>

    <div class="form-group">
      <label class="control-label">Mail</label> <br>
      <input class="form-control" type="email" value="<%= @user.email%>" disabled>
    </div>

    <div class="form-group">
      <label class="control-label">Created At</label> <br>
      <input class="form-control" type="text" value="<%= @user.created_at%>" disabled>
    </div>

    <div class="form-group">
      <label class="control-label">Last Sign In</label> <br>
      <input class="form-control" type="text" value="<%= @user.last_sign_in_at.nil? ? 'Never' : @user.last_sign_in_at%>" disabled>
    </div>

    <div class="form-group">
      <label class="control-label">Admin</label> <br>
      <input class="form-control" type="text" value="<%= @user.admin? ? 'YES' : 'NO'%>" disabled>
    </div>
  </div>
</div>
<div class="pull-right">
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>
</div>